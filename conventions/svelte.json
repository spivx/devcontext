{
  "id": "svelte",
  "defaults": {
    "tooling": "sveltekit",
    "language": "typescript",
    "stateManagement": "svelte-stores",
    "styling": "scoped-css",
    "testingUT": "vitest",
    "reactPerf": "memoHooks"
  },
  "rules": [
    {
      "if": { "toolingIncludes": ["vite"] },
      "set": { "tooling": "vite" }
    },
    {
      "if": { "toolingIncludes": ["elderjs"] },
      "set": { "tooling": "elderjs" }
    },
    {
      "if": { "toolingIncludes": ["tailwind"] },
      "set": { "styling": "tailwind" }
    },
    {
      "if": { "toolingIncludes": ["vanilla-extract"] },
      "set": { "styling": "vanilla-extract" }
    },
    {
      "if": { "testingIncludes": ["playwright"] },
      "set": { "testingE2E": "playwright" }
    }
  ]
}
