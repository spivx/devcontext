{
  "id": "remix",
  "defaults": {
    "folders": "vercel",
    "dataFetching": "route-loaders",
    "styling": "tailwind",
    "testingUT": "vitest",
    "reactPerf": "memoHooks"
  },
  "rules": [
    {
      "if": { "toolingIncludes": ["jest"] },
      "set": { "testingUT": "jest" }
    },
    {
      "if": { "toolingIncludes": ["css-modules"] },
      "set": { "styling": "css-modules" }
    },
    {
      "if": { "toolingIncludes": ["styled-components"] },
      "set": { "styling": "styled-components" }
    }
  ]
}
